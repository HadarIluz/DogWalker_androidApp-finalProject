<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dog_item"

    android:background="#A9ECAB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0">

    <ImageButton
        android:id="@+id/imageButtonDog"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:background="@drawable/small_logo"
        android:clickable="true"
        android:contextClickable="true"
        app:srcCompat="@drawable/small_logo" />

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvDogName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Dog Name: "
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvOwnerName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="Owner Name: "
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvWalkEvery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Walk Every: "
            android:textColor="#040303"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Next Walk: "
            android:textColor="#050505"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnUpdateNextWalk"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"


            android:backgroundTint="#3B69B2F1"
            android:insetBottom="6dp"
            app:icon="@drawable/dog_food"
            app:iconGravity="top"
            android:text="Walk"
            app:iconTint="#FFFFFF" />
    </LinearLayout>

</LinearLayout>